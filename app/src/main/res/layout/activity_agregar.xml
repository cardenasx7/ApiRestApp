<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/txtUId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="ID"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/edtUId"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtUId"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtUId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/txtUName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtUName"
        app:layout_constraintTop_toBottomOf="@+id/txtUId" />

    <TextView
        android:id="@+id/txtUName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre Producto"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/edtName"
        app:layout_constraintStart_toStartOf="@+id/edtName"
        app:layout_constraintTop_toBottomOf="@+id/edtUId" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/txtUDesc"
        app:layout_constraintStart_toStartOf="@+id/txtUDesc"
        app:layout_constraintTop_toBottomOf="@+id/txtUName" />

    <TextView
        android:id="@+id/txtUDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Descripcion del Producto"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/edtDesc"
        app:layout_constraintStart_toStartOf="@+id/edtDesc"
        app:layout_constraintTop_toBottomOf="@+id/edtName" />

    <EditText
        android:id="@+id/edtDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtUPrice"
        app:layout_constraintTop_toBottomOf="@+id/txtUDesc" />

    <TextView
        android:id="@+id/txtUPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Precio"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/edtPrice"
        app:layout_constraintStart_toStartOf="@+id/edtPrice"
        app:layout_constraintTop_toBottomOf="@+id/edtDesc" />

    <EditText
        android:id="@+id/edtPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/txtUStock"
        app:layout_constraintStart_toStartOf="@+id/txtUStock"
        app:layout_constraintTop_toBottomOf="@+id/txtUPrice" />

    <TextView
        android:id="@+id/txtUStock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Stock"

        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/edtStock"
        app:layout_constraintStart_toStartOf="@+id/edtStock"
        app:layout_constraintTop_toBottomOf="@+id/edtPrice" />

    <EditText
        android:id="@+id/edtStock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:selectAllOnFocus="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtUStock" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="24dp"
        android:background="#6ddf33"
        android:radius="150dp"
        android:text="Actualizar"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnDel"
        android:layout_width="186dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="24dp"
        android:background="#FF0000"
        android:radius="150dp"
        android:text="Eliminar"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>